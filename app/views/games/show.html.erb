<%# <%= render partial: "header", layout: "" %>
<h1><%= @game.name %></h1>
<div>Published in <%= @game.publish_year %></div>
<div><%= @tag.name %></div>
<img src="<%= @game.thumbnail_url %>">
<div>Number of players: <%= @game.min_players %> â€“ <%= @game.max_players %></div>
<div>Upvoted <%= @game.votes.where(vote_direction:true).count %> times</div>
<p><%= @game.description %></p>
<% if current_user %>
<%= render 'partials/voteform',{ type: @game, type_name:'Game'} %>
<% if !favorite?(@game) %>
  <%= form_tag(user_favorites_path(@game), method: :post) do %>
  <div><%= submit_tag 'Add to Favorites' %></div>
<% end %>
<% end %>

<%= link_to 'Comment', new_game_comment_path(@game) %>

<ul>
<% @comments.each do |comment| %>
  <li>body:<%= comment.body %>
  vote:<%= comment.votes.where(vote_direction:true).count %> </li>
  <%= render 'partials/voteform',{ type: comment, type_name:'Comment'} %>
<% end %>
</ul>
<% end %>